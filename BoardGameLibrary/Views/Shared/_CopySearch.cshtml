@model BoardGameLibrary.Models.CopySearchViewModel

@using (Ajax.BeginForm("SearchCopies", "Copies", new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "copy-search-results" }))
{
    @Html.AntiForgeryToken()
    <h4>Copy Search</h4>
    <div id="CopySearchMessages" class="notification-wrapper">

    </div>
    <div class="row">
        <div class="form col-md-4">
            <div class="row">
                <div class="col-md-3">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.LabelFor(model => model.Info, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Info, new { htmlAttributes = new { @class = "form-control input-sm" } })
                    @Html.ValidationMessageFor(model => model.Info, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <input id="btnSearch" type="submit" value="Search" class="btn btn-lg btn-primary" />
            
        </div>
        <div id="copy-search-results" class="col-md-8">
        </div>
    </div>
}
